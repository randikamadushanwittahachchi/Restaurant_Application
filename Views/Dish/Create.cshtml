@model Restaurant.Models.Dish

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form method="post" asp-controller="DishController" asp-action="Create" >
        <div>
            <label asp-for="Name" class="form-label">Enter Dish Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ImageUrl" class="form-label">Upload Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Price" class="form-label">Dish Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
